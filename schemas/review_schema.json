{
  "title": "Review Schema",
  "type": "object",
  "properties": {
    "review_id": { "type": "string", "format": "uuid" },
    "product_id": { "type": "string", "format": "uuid" },
    "reviewer_id": { "type": "string", "format": "uuid" },
    "rating": { "type": "integer", "minimum": 1, "maximum": 5 },
    "title": { "type": "string" },
    "comment": { "type": "string" },
    "review_date": { "type": "string", "format": "date-time" },
    "sentiment_score": { "type": "number", "minimum": -1, "maximum": 1 },
    "is_verified_purchase": { "type": "boolean" },
    "helpful_votes": { "type": "integer", "minimum": 0 }
  },
  "required": ["review_id", "product_id", "reviewer_id", "rating", "review_date"]
}